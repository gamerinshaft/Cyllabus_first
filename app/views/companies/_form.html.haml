= form_for @company do |f|
  - if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :company_name
    = f.text_field :company_name
  .field
    = f.label :homepage_url
    = f.text_field :homepage_url
  .field
    = f.label :established_at
    = f.date_select :established_at
  .field
    = f.label :number_of_members
    = f.number_field :number_of_members
  .field
    = f.label :mail
    = f.text_field :mail
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :slideshare
    = f.text_field :slideshare
  .field
    = f.label :vine
    = f.text_field :vine
  .field
    = f.label :youtube
    = f.text_field :youtube
  .field
    = f.label :logo
    = f.text_field :logo
  .field
    = f.label :cover
    = f.text_field :cover
  .field
    = f.label :phone
    = f.text_field :phone
  .actions
    = f.submit 'Save'
