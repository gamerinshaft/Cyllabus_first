= form_for @blank_question do |f|
  - if @blank_question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blank_question.errors.count, "error")} prohibited this blank_question from being saved:"
      %ul
        - @blank_question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
