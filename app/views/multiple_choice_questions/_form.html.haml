= form_for @multiple_choice_question do |f|
  - if @multiple_choice_question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@multiple_choice_question.errors.count, "error")} prohibited this multiple_choice_question from being saved:"
      %ul
        - @multiple_choice_question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
